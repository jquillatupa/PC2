<h1>Listing caballos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Ratio</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @caballos.each do |caballo| %>
  <tr>
    <td><%= caballo.nombre %></td>
    <td><%= caballo.ratio %></td>
    <td><%= link_to 'Show', caballo %></td>
    <td><%= link_to 'Edit', edit_caballo_path(caballo) %></td>
    <td><%= link_to 'Destroy', caballo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

